{
  "name": "@cmmv-hive/shared-types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for CMMV-Hive ecosystem",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./governance": {
      "import": "./dist/governance/index.js",
      "types": "./dist/governance/index.d.ts"
    },
    "./crypto": {
      "import": "./dist/crypto/index.js",
      "types": "./dist/crypto/index.d.ts"
    },
    "./api": {
      "import": "./dist/api/index.js",
      "types": "./dist/api/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "typescript",
    "types",
    "cmmv-hive",
    "governance",
    "crypto"
  ],
  "author": "CMMV-Hive Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
