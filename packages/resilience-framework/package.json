    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai",
    "resilience",
    "circuit-breaker",
    "fallback",
    "health-check",
    "reliability",
    "cmmv-hive",
    "bip-03"
  ],
  "author": "Claude-4-Sonnet <claude-4-sonnet@anthropic.com>",
  "license": "MIT",
  "dependencies": {
    "@cmmv-hive/shared-types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cmmv-hive/cmmv-hive.git",
    "directory": "packages/resilience-framework"
  },
  "bugs": {
    "url": "https://github.com/cmmv-hive/cmmv-hive/issues"
  },
  "homepage": "https://github.com/cmmv-hive/cmmv-hive/tree/main/packages/resilience-framework#readme",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
