root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation for all files - 4 spaces for better visibility
indent_style = space
indent_size = 4

# Specific configurations for different file types
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 4

[*.{py,pyw}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{bat,cmd}]
end_of_line = crlf

[Makefile]
indent_style = tab

[*.go]
indent_style = tab
